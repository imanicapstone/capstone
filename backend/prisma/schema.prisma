generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String                @id @default(cuid())
  id                String                @id @default(cuid())
  email             String                @unique
  password          String
  salary            Float
  ageRange          String?
  gender            String?
  occupation        String?
          
  transactions      Transaction[]      
}



model Transaction {
  id              String    @id @default(cuid())
  userId          String    
  user            User      @relation("Transaction", fields: [userId], references: [id])

  amount          Float
  category        String
  date            DateTime

}
